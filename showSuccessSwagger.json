{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "Captcha Verify Proxy"
  },
  "host": "captcha-swagger-show-success.vercel.app",
  "basePath": "/api",
  "schemes": ["https"],
  "paths": {
    "/verify-captcha": {
      "post": {
        "summary": "Verify reCAPTCHA token",
        "consumes": ["application/json"],
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "token": { "type": "string" },
                "secret": { "type": "string" }
              },
              "required": ["token","secret"]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Verification response",
            "schema": {
              "type": "object",
              "properties": {
                "success": { "type": "boolean" }
              }
            }
          }
        }
      }
    }
  }
}
